
@model IPOS.Dash.Admin.Web.Models.ExaminerCountViewModel

@{
    ViewBag.Title = "Machine Check";
}

<div class="container">
   
    <h3>MANUFACTURING PROCESS INSTRUCTION</h3>
    <label class="sys_msg">Instructions will be placed here</label>

@using (Html.BeginForm("Index", "ExaminerCount"))
{
        <table>
            <tr>
                <td class="examinerTable" style="text-align:right;"><label>Enter Model No.:</label></td>
                <td class="examinerTable">
                    <!-- TODO: Take from the lastest Threshold entry-->
                    @{
                        int last = 0;
                        if (Model.ExaminerCounts.Count() > 0)
                        {
                            last = Model.ExaminerCounts.LastOrDefault().Threshold;

                        }
                        else
                        {
                            last = 0;
                        }
                    }

                    @*<label>@last</label>*@
                    <label>ABC</label>
            </tr>
            <tr>
                <td class="examinerTable" style="text-align:right; "><label>PART NUMBER:</label></td>
                <td class="examinerTable">@Html.EditorFor(model => model.ExaminerCount.Threshold, new { htmlAttributes = new { @class = "form-control" } })</td>
            </tr>

            <tr>
                <td class="examinerTable" style="text-align:right; "><label>TABLE:</label></td>
                <td class="examinerTable">@Html.EditorFor(model => model.ExaminerCount.Side, new { htmlAttributes = new { @class = "form-control" } })</td>
            </tr>

            <tr>
                <td class="examinerTable" style="text-align:right; "><label>REEL:</label></td>
                <td class="examinerTable">@Html.EditorFor(model => model.ExaminerCount.Threshold, new { htmlAttributes = new { @class = "form-control" } })</td>
            </tr>

            <tr>
                <td class="examinerTable" style="text-align:right; "><label>SIDE:</label></td>
                <td class="examinerTable">@Html.EditorFor(model => model.ExaminerCount.Side, new { htmlAttributes = new { @class = "form-control" } })</td>
            </tr>

            <tr>
                <td class="examinerTable" style="text-align:right;"><label>QUANTITY:</label></td>
                <td class="examinerTable">@Html.EditorFor(model => model.ExaminerCount.Threshold, new { htmlAttributes = new { @class = "form-control" } })</td>
            </tr>


            <tr>
                <td class="examinerTable"></td>
                <td class="examinerTable" style="padding-top: 15px;">
                    <input type="submit" value="Confirm" class="btn btn-default" />
                </td>
            </tr>
        </table>

        <br>
        <table class="table">
            <tr>
                <th>
                    <label>QUANTITY CHECK:   04/100</label>
                </th>
                </tr>
        </table>                          
}
    <!-- End of Form-->

    <hr>

    <!-- Show Results -->
    <div class="container">
        <h4>CHECKLIST</h4>
        <table class="table">
            <tr>         
                <th>
                    <label>PART NO.</label>
                </th>
                <th>
                    <label>TABLE</label>
                </th>   
                <th>
                    <label>REEL</label>
                </th>
                <th>
                    <label>SIDE</label>
                </th>
                <th>
                    <label>QUANTITY</label>
                </th>
                <th>
                    <label>STATUS</label>
                </th>
          
            </tr>
      
            @foreach (var item in Model.ExaminerCounts.Reverse())
            {
                <tr>
                    <td>
                        @item.Threshold
                    </td>
                    <td>
                        @item.Threshold
                    </td>
                    <td>
                        @item.Threshold
                    </td>
                    <td>
                        @item.Side
                    </td>
                    <td>
                        123
                    </td>
                    <td>
                        OK
                    </td>   
       
                </tr>
            }

        </table>

    </div>

</div>

@section JavaScriptAtDocReady
{
    $(function() {
        $('#datetimepicker').datetimepicker({
        format: 'yyyy-mm-dd',
        startView: 'decade',
        minView: 'month',
        autoclose: true
        });
    });
}